<div class="row">
    <div class="col-md-4">
        <h1>Client Log in</h1>
        <div class="mb-3">
            <label class="form-label">Username:</label>
            <input class="form-control" id="username" type="text" autocomplete="off" autocapitalize="off" spellcheck="false"/>
        </div>
        <div class="mb-3">
            <label class="form-label">Password:</label>
            <input class="form-control" id="password" type="password" autocomplete="off" autocapitalize="off" maxlength="8"/>
        </div>
        <div class="mb-3">
            <label class="form-label">2FA Code:</label>
            <input class="form-control" id="token" type="text" maxlength="6"/>
        </div>
        <div class="mb-3">
            <button class="btn btn-primary" id="login">Login</button>
        </div>

    </div>
    <div class="col-md-4">
        <h2>Helpful links</h2>
    </div>
</div>
