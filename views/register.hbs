<div class="mx-auto" style="max-width: 30rem;">
    <div class="card card-lg mb-5">
        <div class="card-body">
            <div class="row">

                <h1>Register</h1>
                <div class="mb-3">
                    <label class="form-label">Username:</label>
                    <input class="form-control" id="username" type="text" autocomplete="off" autocapitalize="off" spellcheck="false"/>
                </div>
                <div class="mb-3">
                    <label class="form-label">Password:</label>
                    <input class="form-control" id="password" type="password" autocomplete="off" autocapitalize="off" maxlength="8"/>
                </div>
                <div class="mb-3">
                    <label class="form-label">Email:</label>
                    <input class="form-control" id="email" type="text" autocomplete="off" autocapitalize="off"/>
                </div>
                <div class="d-grid">
                    <button class="btn btn-primary" id="register">Register</button>
                </div>

                <h2>Two Factor Registration</h2>
                <div id="qr_code_container"></div>
                <div class="mb-3">
                    <label class="form-label">Enter Token to Verify:</label>
                    <input class="form-control" id="token" type="text" maxlength="6"/>
                </div>
                <div class="d-grid">
                    <button class="btn btn-primary" id="verify">Verify</button>
                </div>

            </div>
        </div>
    </div>
</div>

<script src="/js/register.js"></script>
